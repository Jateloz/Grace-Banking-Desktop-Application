<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="950.0" prefWidth="1124.0" spacing="10" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.jatelobank.ActivityWindow.Reports.UserAccountReport">

    <TableView fx:id="tableView" prefHeight="950.0" prefWidth="1124.0" style="-fx-background-color: #132A12; -fx-border-color: white;" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colUserName" prefWidth="232.0" text="User Name" />
            <TableColumn fx:id="colAccNo" prefWidth="175.0" text="Account Number" />
            <TableColumn fx:id="colCheckingAmount" prefWidth="142.0" text="Checking Amount" />
            <TableColumn fx:id="colSavingsAmount" prefWidth="144.0" text="Savings Amount" />
            <TableColumn fx:id="colBudgetAmount" prefWidth="142.0" text="Budget Amount" />
            <TableColumn fx:id="colIncome" prefWidth="153.0" text="Income" />
            <TableColumn fx:id="colExpense" prefWidth="135.0" text="Expense" />
        </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
    </TableView>
    <HBox spacing="15" style="-fx-alignment: center;">
        <Button onAction="#handleDownloadReport" style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-font-size: 14px;                                -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-cursor: hand;" text="Download Report" />
    </HBox>

</VBox>
