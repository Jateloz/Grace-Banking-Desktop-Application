<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="200.0" prefWidth="662.0" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.jatelobank.ActivityWindow.DepositController">
   <children>
      <VBox prefHeight="200.0" prefWidth="662.0">
         <children>
            <Label style="-fx-font-size: 1.3em;" text="Amount you wish to deposit :">
               <VBox.margin>
                  <Insets bottom="50.0" left="200.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="depositAmount" prefHeight="60.0" prefWidth="668.0" promptText="Enter amount to deposit" style="-fx-font-size: 1.2em;">
               <effect>
                  <DropShadow blurType="GAUSSIAN" />
               </effect></TextField>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelButt" prefHeight="35.0" prefWidth="80.0" style="-fx-font-size: 1.3em; -fx-text-fill: white; -fx-background-color: #132A12; -fx-border-radius: 10;" text="Cancel">
                     <HBox.margin>
                        <Insets left="10.0" top="40.0" />
                     </HBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="depositButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#depositButt" prefHeight="35.0" prefWidth="80.0" style="-fx-font-size: 1.3em; -fx-text-fill: white; -fx-background-color: #132A12; -fx-border-radius: 10;" text="Deposit">
                     <HBox.margin>
                        <Insets left="480.0" top="40.0" />
                     </HBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
