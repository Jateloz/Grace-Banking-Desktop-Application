<AnchorPane fx:id="ap" prefHeight="550.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.jatelobank.LoginWindow">
   <VBox layoutX="460.0" prefHeight="550.0" prefWidth="390.0" AnchorPane.leftAnchor="470.0">
