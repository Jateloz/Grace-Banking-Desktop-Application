         <VBox.margin>
            <Insets left="150.0" top="150.0"/>
         </VBox.margin>
      </FontAwesomeIconView>
      <Label style="-fx-text-fill: #FFFFFF; -fx-font-size: 1.3em; -fx-font-weight: BOLD;" text="Grace Bank is personal"
