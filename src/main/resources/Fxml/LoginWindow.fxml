            <Insets bottom="5.0" />
         </VBox.margin>
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
      </PasswordField>
      <Label fx:id="label" style="-fx-text-fill: red;">
         <VBox.margin>
            <Insets left="5.0" top="3.0" />
