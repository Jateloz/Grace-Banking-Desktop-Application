      <Button fx:id="LoginButton" alignment="TOP_CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#LoginButt" prefHeight="33.0" prefWidth="389.0" style="-fx-background-color: #132A13; -fx-text-fill: #FFFFFF; -fx-text-alignment: CENTER; -fx-font-size: 1.1em;" text="Log in" VBox.vgrow="ALWAYS">
         <padding>
            <Insets top="10.0" />
         </padding>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Hyperlink fx:id="RegisterButton" onAction="#RegisterButt" text="Don't have an account?" VBox.vgrow="ALWAYS">
         <padding>
            <Insets top="5.0" />
         </padding>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Hyperlink>
      <Hyperlink layoutX="10.0" layoutY="238.0" text="Forgot your password?" VBox.vgrow="ALWAYS">
         <padding>
            <Insets top="5.0" />
         </padding>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Hyperlink>
   </VBox>
   <VBox layoutY="-2.0" prefHeight="556.0" prefWidth="460.0" style="-fx-background-color: #132A12;">
      <FontAwesomeIconView fx:id="AdminButton" fill="WHITE" glyphName="BANK" onMousePressed="#AdminButt" size="130"
