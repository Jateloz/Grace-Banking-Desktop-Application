         <VBox.margin>
            <Insets bottom="10.0" left="130.0"/>
         </VBox.margin>
      </Label>
      <Label style="-fx-text-fill: #FFFFFF;" text="All your accounts,cards,savings," textFill="#fcfcfc">
         <VBox.margin>
            <Insets bottom="5.0" left="120.0"/>
         </VBox.margin>
      </Label>
      <Label style="-fx-text-fill: #FFFFFF;" text="and investments in one place" textFill="WHITE">
         <VBox.margin>
            <Insets left="130.0"/>
         </VBox.margin>
      </Label>
