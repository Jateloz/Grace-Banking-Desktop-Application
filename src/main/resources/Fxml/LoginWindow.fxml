         </VBox.margin>
         <padding>
            <Insets top="5.0" />
         </padding>
      </Label>
      <TextField fx:id="AccNumberField" prefHeight="30.0" prefWidth="174.0" promptText="1100 0000 0000 0000" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets bottom="5.0" />
