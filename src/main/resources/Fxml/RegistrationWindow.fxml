<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:id="ap" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.jatelobank.RegistrationWindow">
   <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <!-- Left Panel -->
      <VBox alignment="CENTER" style="-fx-background-color: #132A12;" HBox.hgrow="ALWAYS">
         <StackPane VBox.vgrow="ALWAYS">
            <VBox alignment="CENTER" spacing="20">
               <FontAwesomeIconView fill="WHITE" glyphName="BANK" size="250" />
               <VBox alignment="CENTER" spacing="10">
                  <Label style="-fx-text-fill: #FFFFFF; -fx-font-size: 2em; -fx-font-weight: bold;"
                         text="Grace Bank is personal" />
                  <Label style="-fx-text-fill: #FFFFFF; -fx-font-size: 2em; -fx-font-weight: bold;"
                         text="finance, made simple." />
                  <VBox alignment="CENTER" spacing="5">
                     <Label style="-fx-text-fill: #FFFFFF; -fx-font-size: 1.5em;"
                            text="All your accounts, cards, savings," />
                     <Label style="-fx-text-fill: #FFFFFF; -fx-font-size: 1.5em;"
                            text="and investments in one place." />
                  </VBox>
               </VBox>
            </VBox>
         </StackPane>
         <Label fx:id="BackButton" onMousePressed="#BackButt"
                style="-fx-text-fill: red; -fx-font-size: 1.2em;" text="Back">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
            <VBox.margin>
               <Insets bottom="20" right="20" />
            </VBox.margin>
         </Label>
      </VBox>

      <!-- Right Panel -->
      <VBox alignment="CENTER" spacing="20" HBox.hgrow="ALWAYS">
         <padding>
            <Insets bottom="40" left="40" right="40" top="40" />
         </padding>

         <!-- Name Fields -->
         <HBox spacing="20">
            <VBox spacing="5" HBox.hgrow="ALWAYS">
               <Label style="-fx-font-size: 1.2em;" text="First name" />
               <TextField fx:id="FirstName" promptText="Henry"
                          style="-fx-font-size: 1.2em;" />
            </VBox>
            <VBox spacing="5" HBox.hgrow="ALWAYS">
               <Label style="-fx-font-size: 1.2em;" text="Last name" />
               <TextField fx:id="LastName" promptText="Jatelo"
                          style="-fx-font-size: 1.2em;" />
            </VBox>
         </HBox>

         <!-- Email Field -->
         <VBox spacing="5">
            <Label style="-fx-font-size: 1.2em;" text="Email" />
            <TextField fx:id="Email" promptText="example@gmail.com"
                       style="-fx-font-size: 1.2em;" />
         </VBox>

         <!-- Phone Number Field -->
         <VBox spacing="5">
            <Label style="-fx-font-size: 1.2em;" text="Phone number" />
            <TextField fx:id="PhoneNumber" promptText="+2547 5770 1993"
                       style="-fx-font-size: 1.2em;" />
         </VBox>

         <!-- Address Field -->
         <VBox spacing="5">
            <Label style="-fx-font-size: 1.2em;" text="Street Address" />
            <TextField fx:id="StreetAddress" promptText="254,ngong"
                       style="-fx-font-size: 1.2em;" />
         </VBox>

         <!-- City and ZIP -->
         <HBox spacing="20">
            <VBox spacing="5" HBox.hgrow="ALWAYS">
               <Label style="-fx-font-size: 1.2em;" text="ZIP code" />
               <TextField fx:id="ZIPCode" promptText="00100"
                          style="-fx-font-size: 1.2em;" />
            </VBox>
            <VBox spacing="5" HBox.hgrow="ALWAYS">
               <Label style="-fx-font-size: 1.2em;" text="City" />
               <TextField fx:id="City" promptText="Nairobi"
                          style="-fx-font-size: 1.2em;" />
            </VBox>
         </HBox>

         <!-- Account and Password -->
         <HBox spacing="20">
            <VBox spacing="5" HBox.hgrow="ALWAYS">
               <Label style="-fx-font-size: 1.2em;" text="Account number" />
               <TextField fx:id="AccNumber" promptText="3300 0000 0000 0000"
                          style="-fx-font-size: 1.2em;" />
            </VBox>
            <VBox spacing="5" HBox.hgrow="ALWAYS">
               <Label style="-fx-font-size: 1.2em;" text="Password" />
               <PasswordField fx:id="Password" promptText="Password"
                              style="-fx-font-size: 1.2em;" />
            </VBox>
         </HBox>

         <!-- Error Label -->
         <Label fx:id="label" style="-fx-text-fill: red;" />

         <!-- Register Button -->
         <Button fx:id="RegisterButton" onAction="#RegisterButt"
                 style="-fx-background-color: #132A12; -fx-text-fill: #FFFFFF; -fx-font-size: 1.5em; -fx-font-weight: bold;"
                 text="Register" maxWidth="Infinity">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
            <VBox.margin>
               <Insets top="20" />
            </VBox.margin>
         </Button>
      </VBox>
   </HBox>
</AnchorPane>